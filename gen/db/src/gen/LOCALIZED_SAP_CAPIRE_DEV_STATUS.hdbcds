using SAP_CAPIRE_DEV_STATUS as SAP_CAPIRE_DEV_STATUS;
using SAP_CAPIRE_DEV_STATUS_TEXTS as SAP_CAPIRE_DEV_STATUS_TEXTS;
view LOCALIZED_SAP_CAPIRE_DEV_STATUS as select from SAP_CAPIRE_DEV_STATUS as L mixin {
  __TEXTS : association[*] to SAP_CAPIRE_DEV_STATUS_TEXTS on __TEXTS.CODE = $projection.CODE;
  __LOCALIZED : association to SAP_CAPIRE_DEV_STATUS_TEXTS on __LOCALIZED.CODE = $projection.CODE and __LOCALIZED.LOCALE = SESSION_CONTEXT('LOCALE');
} into {
  coalesce(L.LOCALIZED.DESCR, L.DESCR) as DESCR,
  key L.CODE as CODE,
  L.NAME,
  __TEXTS as TEXTS,
  __LOCALIZED as LOCALIZED
};
